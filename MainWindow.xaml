<Window x:Class="Library_DB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_DB"
        mc:Ignorable="d"
        Title="Your Library" Height="650" Width="420">
    <!--
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF895C3B" Offset="0.4"/>
            <GradientStop Offset="1" Color="#FFC5CACC"/>
        </LinearGradientBrush>
    </Window.Background>
    -->
    <Window.Background>
        <ImageBrush ImageSource="/Resources/bakgrund1.jpg"></ImageBrush>
    </Window.Background>

    <Grid>
        <!--Header-->
        <Border Width="250"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Left"
                BorderBrush="White" 
                BorderThickness="1"
                Margin="15,0,0,0" >
        </Border>
         
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2" >
            <Image Source="/Resources/icon2.png" 
                   Width="30" Height="30" Panel.ZIndex="1" 
                   OpacityMask="Black" 
                   Margin="15,10,5,5"/>
            <TextBlock Grid.Row="0" Grid.Column ="0"
                       Text="Your Privet Library" Foreground="White"
                       FontFamily="Century Gothic" FontWeight="Light"
                       FontSize="22" 
                       VerticalAlignment="Bottom"  Margin="0,0,0,8">
            </TextBlock>
        </StackPanel>
        <!--Header-->
        
        <!--Search Bar-->
        <StackPanel Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">
            <Border Background="White" Margin="20,30,20,30" CornerRadius="30">
                <TextBox
                     Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" 
                     Margin="30,20,20,20"
                     Text="Search Book"
                     FontSize="20" 
                     FontFamily="Century Gothic" 
                     Foreground="#FF503612"
                     BorderBrush="Transparent"
                     Background="Transparent">
                </TextBox>
            </Border>
        </StackPanel>
        <!--Search Bar-->
        <!--Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                    Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">
            <Button Grid.Column="1" Grid.Row="2" Height="30" Width="80" 
                    Margin="0,0,20,0"></Button>
            <Button Grid.Column="1" Grid.Row="2" Height="30" Width="80"
                    Margin="20,0,0,0"></Button>
        </StackPanel>
        <!--Buttons-->
        <!--Grid Design-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="150"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <!--Grid Design-->
    </Grid>
</Window>
